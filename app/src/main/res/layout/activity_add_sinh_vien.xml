<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.AddSinhVien">

    <EditText
        android:id="@+id/txtDes"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameLop"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:ems="10"
        android:hint="Nhập năm sinh"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtNameLop"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Nhập tên sinh viên"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinYear"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTown"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:layout_marginBottom="5dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtTown"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDes"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:ems="10"
        android:hint="Nhập quê quán"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAddLop"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinYear"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:text="Thêm" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:text="Thêm sinh viên"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>